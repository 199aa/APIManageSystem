<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.api.mapper.RoleMapper">
  
  <resultMap id="BaseResultMap" type="com.api.model.Role">
    <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="code" property="code" />
    <result column="description" property="description" />
    <result column="status" property="status" />
    <result column="is_system" property="isSystem" />
    <result column="create_time" property="createTime" />
    <result column="update_time" property="updateTime" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, name, code, description, status, is_system, create_time, update_time
  </sql>
  
  <select id="selectAll" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM role
    ORDER BY id ASC
  </select>
  
  <select id="selectByPage" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM role
    ORDER BY id ASC
    LIMIT #{offset}, #{limit}
  </select>
  
  <select id="count" resultType="int">
    SELECT COUNT(*) FROM role
  </select>
  
  <select id="selectById" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM role
    WHERE id = #{id}
  </select>
  
  <select id="selectByCode" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM role
    WHERE code = #{code}
  </select>
  
  <insert id="insert" parameterType="com.api.model.Role" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO role (name, code, description, status, is_system)
    VALUES (#{name}, #{code}, #{description}, #{status}, #{isSystem})
  </insert>
  
  <update id="update" parameterType="com.api.model.Role">
    UPDATE role
    SET name = #{name},
        description = #{description},
        status = #{status}
    WHERE id = #{id}
  </update>
  
  <delete id="deleteById">
    DELETE FROM role WHERE id = #{id}
  </delete>
  
  <delete id="deleteBatch">
    DELETE FROM role WHERE id IN
    <foreach collection="ids" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  
</mapper>
